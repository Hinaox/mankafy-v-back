{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
  },
  "include": [
    "*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}